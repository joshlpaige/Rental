@{
    ViewData["title"] = "About Me";
}


<div class="card">
  <div class="ds-top"></div>
  <div class="avatar-holder">
    <img src="https://pbs.twimg.com/profile_images/968959598181961728/KWj2QsDB_400x400.jpg" alt="Josh">
  </div>
  <div class="name">
    <a href="https://twitter.com/joshlpaige" target="_blank">Josh Paige</a>
    <h6 title="Followers"><i class="fas fa-users"></i> <span class="followers">0</span></h6>
  </div>
  <div class="button">
    <a href="#" class="btn" onmousedown="follow();">Follow <i class="fas fa-user-plus"></i></a>
  </div>
  <div class="ds-info">
    <div class="ds pens">
      <h6 title="Number of pens created by the user">Pens <i class="fas fa-edit"></i></h6>
      <p>29</p>
    </div>
    <div class="ds projects">
      <h6 title="Number of projects created by the user">Projects <i class="fas fa-project-diagram"></i></h6>
      <p>0</p>
    </div>
    <div class="ds posts">
      <h6 title="Number of posts">Posts <i class="fas fa-comments"></i></h6>
      <p>0</p>
    </div>
  </div>
  <div class="ds-skill">
    <h6>Skill <i class="fa fa-code" aria-hidden="true"></i></h6>
    <div class="skill html">
      <h6><i class="fab fa-html5"></i> HTML </h6>
      <div class="bar bar-html">
        <p>55%</p>
      </div>
    </div>
    <div class="skill css">
      <h6><i class="fab fa-css3-alt"></i> CSS </h6>
      <div class="bar bar-css">
        <p>50%</p>
      </div>
    </div>
    <div class="skill javascript">
      <h6><i class="fab fa-js"></i> JavaScript </h6>
      <div class="bar bar-js">
        <p>25%</p>
      </div>
    </div>
  </div>
</div>


@section Styles{
    <link href="/css/about.css" rel="stylesheet">
}

@section Scripts{
    <script src="/js/home/about.js"></script>
}
